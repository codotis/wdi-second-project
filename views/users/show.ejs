<div class="container">
  <div class="row">
    <div class="col text-center">
      <p class="username"><%= user.username %>'s profile</p>
    </div>
  </div>

  <div class="row">
    <div class="col text-center">
      <a class="follow-user" href="/users/follow/<%= user.id %>">Follow <span class ="username"><%= user.username %></span></a>
    </div>
  </div>

  <div class="row follow">
    <div class="col-3">
    </div>
    <div class="col-6">
      <p class="follow">Followers: <%= user.followers.length %></p>
      <p class="follow">Following: <%= user.following.length %></p>
    </div>
    <div class="col-3">
    </div>
  </div>

  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-6">
      <div class="video">
        <% user.tracks.forEach((track) => { %>
          <a href="/tracks/<%= track.id %>">
          <h2 class="text-center track-header"><%= track.artist %> - <%= track.title %></h2>
          </a>
          <div class="embed">
          <iframe width="560" height="500" src="https://www.youtube.com/embed/<%= track.link %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
          </div>
          <% }) %>
        </div>
      </div>
      <div class="col-3">
      </div>
    </div>

  </div>
