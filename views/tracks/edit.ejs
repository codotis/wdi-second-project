

<form class="" method="POST" action="/tracks/<%= track.id %>">
  <input type="hidden" name="_method" value="PUT">
    <div>
      <label for="title">Artist</label>
      <input class="u-full-width" type="text" name="artist" id="artist" value="<%= track.artist %>">
    </div>

    <div>
      <label for="author">Title</label>
      <input class="u-full-width" type="text" name="title" id="title" value="<%= track.title %>">
    </div>

    <div>
      <label for="author">Link</label>
      <input class="u-full-width" type="text" name="link" id="link" value="<%= track.link %>">
    </div>

    <div>
      <label for="description">Blip</label>
      <textarea class="u-full-width" name="blip"><%= track.blip %></textarea>
    </div>

    <button class="button-primary u-full-width">Update</button>
</form>
